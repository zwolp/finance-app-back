{
  "compilerOptions": {
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "target": "es6",
    "downlevelIteration": true,
    "module": "CommonJS",
    "lib": ["es6"],
    "outDir": "dist",
    "alwaysStrict": true,
    "experimentalDecorators":true, 
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}